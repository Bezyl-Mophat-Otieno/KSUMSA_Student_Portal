<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Active Members</li>
  </ol>
</nav>

<div class="row">
  <%-include('./Partials/messagePrompts.ejs')  %> 
    <div class="col-6">
      <h3>M e m b e r s</h3>
      <hr>
    </div>
    <div class="col-6 d-flex justify-content-end">
      <a href="/registerForm" type="button" class="btn btn-primary align-self-center">+ add Member</a>
    </div>
  </div>
  
  <% if(results.length > 0) {%>

    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col"></th>
          <th scope="col">Reg_NO</th>
          <th scope="col">First_Name</th>
          <th scope="col">Last_Name</th>
          <th scope="col">Course</th>
          <th scope="col" class="text-end">Action</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach ( (result)=>{ %>
        <tr>
          <th scope="row"></th>
            <td><%-result.Reg_No%></td>
            <td><%-result.First_Name%></td>
            <td><%-result.Last_Name%></td>
            <td><%-result.Course %></td>
            <td class="d-flex justify-content-end ">
              <a href="/memberInfo/<%- result.ID%> " type="button" class="btn btn-light btn-outline-success  btn-small"><i class="bi bi-eye"></i> View</a>
              <form action="/editMemberForm/<%- result.ID %>" method="POST" id="edit-form" class="mx-1">
                <input type="hidden" name="_method" value="PUT">
                <a href="/editMemberInfo/<%- result.ID %> " type="submit" class="btn btn-light btn-outline-success btn-small "><i class="bi bi-pencil"></i>Edit</a>
              </form>
              <form action="/deactivateMember/<%- result.ID %>" method="POST" id="edit-form" class="mx-1">
                <button type="submit" class="btn btn-light btn-outline-primary btn-small "><i class="bi bi-person-x"></i>Deactivate</button>
              </form>
              <form action="/deleteMember/<%- result.ID %>" method="POST" id="delete-form" class="mx-1">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-light btn-outline-danger btn-small "><i class="bi bi-person-x"></i> Delete</button>
              </form>
            </td>
          </tr>
          <%}); %> 
        </tbody>
      </table>
      
<div class="row">
    <div class="col-6">
    </div>
    <div class="col-6 d-flex justify-content-end">
      <a href="/inactiveMembers" type="button" class="btn btn-outline-secondary align-self-center">Inactive Members</a>
    </div>
  </div>
      
  <% } else { %>


  <% } %> 

